<h1>Offender case notes</h1>
{{#.}}
    <h2>Case notes</h2>
    <table>
        <tr><td>Type</td><td>{{ optionalString type }}</td></tr>
        <tr><td>Sub type</td><td>{{ optionalString subType }}</td></tr>
        <tr><td>Creation date time</td><td>{{ optionalString (formatDate creationDateTime) }}</td></tr>
        <tr><td>Author name</td><td>{{ optionalString authorName }}</td></tr>
        <tr><td>Text</td><td>{{{ optionalString text }}}</td></tr>
    </table>

    {{#amendments}}
    <h3>Amendments</h3>
    <table>
        <tr><td>Creation date time</td><td>{{ optionalString (formatDate creationDateTime) }}</td></tr>
        <tr><td>Author Name</td><td>{{ optionalString authorName }}</td></tr>
        <tr><td>Additional note text</td><td>{{{ optionalString additionalNoteText }}}</td></tr>
    </table>
    {{/amendments}}
{{/.}}
