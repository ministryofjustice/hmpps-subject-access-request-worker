<h1>Personal Learning Plan</h1>
{{#induction}}
    <br>
    <h2>Induction</h2>
    <table class="summary-list">
        <tr><td>Prison number</td><td>{{ optionalValue prisonNumber }}</td></tr>
        <tr><td>Hoping to Work</td><td>{{ optionalValue workOnRelease.hopingToWork }}</td></tr>
        <tr><td>Factors affecting ability to work</td><td>{{#workOnRelease.affectAbilityToWork}}{{ . }}{{#unless @last}}<br>{{/unless}}{{/workOnRelease.affectAbilityToWork}}</td></tr>
        <tr><td>Other Factors</td><td>{{ optionalValue workOnRelease.affectAbilityToWorkOther}}</td></tr>
        <tr><td>Education level</td><td>{{ optionalValue previousQualifications.educationLevel }}</td></tr>
        <tr><td>Previous training</td><td>{{#previousTraining.trainingTypes}}{{ . }}{{#unless @last}}<br>{{/unless}}{{/previousTraining.trainingTypes}}</td></tr>
        <tr><td>Other Training</td><td>{{ optionalValue previousTraining.trainingTypeOther }}</td></tr>
        <tr><td>Has worked before</td><td>{{ optionalValue previousWorkExperiences.hasWorkedBefore }}</td></tr>
        <tr><td>Has worked before Not Relevant reason</td><td>{{ optionalValue previousWorkExperiences.hasWorkedBeforeNotRelevantReason }}</td></tr>
    </table>

    <h3>Previous qualifications</h3>
    <table class="data-table">
        <tr>
            <td class="data-column-25">Subject</td>
            <td class="data-column-25">Level</td>
            <td class="data-column-50">Grade</td>
        </tr>
        {{#previousQualifications.qualifications}}
            <tr>
                <td>{{ optionalValue subject }}</td>
                <td>{{ optionalValue level }}</td>
                <td>{{ optionalValue grade }}</td>
            </tr>
        {{/previousQualifications.qualifications}}
    </table>

    <h3>Previous work experiences</h3>
    <table class="data-table">
        <tr>
            <td class="data-column-15">Type</td>
            <td class="data-column-15">Type Other</td>
            <td class="data-column-25">Role</td>
            <td class="data-column-45">Details</td>
        </tr>
        {{#previousWorkExperiences.experiences}}
            <tr>
                <td>{{ optionalValue experienceType }}</td>
                <td>{{ optionalValue experienceTypeOther }}</td>
                <td>{{ optionalValue role }}</td>
                <td>{{ optionalValue details }}</td>
            </tr>
        {{/previousWorkExperiences.experiences}}
    </table>

    <h3>Interests and skills</h3>
    <table class="summary-list">
        <tr><td>In prison work interests</td><td>{{#inPrisonInterests.inPrisonWorkInterests}}{{ workType }}{{#if workTypeOther}} ({{ workTypeOther }}){{/if}}{{/inPrisonInterests.inPrisonWorkInterests}}</td></tr>
        <tr><td>In prison training interests</td><td>{{#inPrisonInterests.inPrisonTrainingInterests}}{{ trainingType }}{{#if trainingTypeOther}} ({{ trainingTypeOther }}){{/if}}{{/inPrisonInterests.inPrisonTrainingInterests}}</td></tr>
        <tr><td>Skills</td><td>{{#personalSkillsAndInterests.skills}}{{ skillType }}{{#if skillTypeOther}} ({{ skillTypeOther }}){{/if}}{{/personalSkillsAndInterests.skills}}</td></tr>
        <tr><td>Interests</td><td>{{#personalSkillsAndInterests.interests}}{{ interestType }}{{#if interestTypeOther}} ({{ interestTypeOther }}){{/if}}{{/personalSkillsAndInterests.interests}}</td></tr>
        <tr><td>Future work interests</td><td>{{#futureWorkInterests.interests}}{{ workType }}{{#if workTypeOther}} ({{ workTypeOther }}){{/if}} - {{ role }}{{/futureWorkInterests.interests}}</td></tr>
    </table>

    <h3>In prison work interests</h3>
    <table class="data-table">
        <tr>
            <td class="data-column-50">Type</td>
            <td class="data-column-50">Other Type</td>
        </tr>
        {{#inPrisonInterests.inPrisonWorkInterests}}
            <tr>
                <td>{{ optionalValue workType }}</td>
                <td>{{ optionalValue workTypeOther }}</td>
            </tr>
        {{/inPrisonInterests.inPrisonWorkInterests}}
    </table>

    <h3>In prison training interests</h3>
    <table class="data-table">
        <tr>
            <td class="data-column-50">Type</td>
            <td class="data-column-50">Other Type</td>
        </tr>
        {{#inPrisonInterests.inPrisonTrainingInterests}}
            <tr>
                <td>{{ optionalValue trainingType }}</td>
                <td>{{ optionalValue trainingTypeOther }}</td>
            </tr>
        {{/inPrisonInterests.inPrisonTrainingInterests}}
    </table>

    <h3>Personal skills</h3>
    <table class="data-table">
        <tr>
            <td class="data-column-50">Type</td>
            <td class="data-column-50">Other Type</td>
        </tr>
        {{#inPrisonInterests.inPrisonTrainingInterests}}
            <tr>
                <td>{{ optionalValue trainingType }}</td>
                <td>{{ optionalValue trainingTypeOther }}</td>
            </tr>
        {{/inPrisonInterests.inPrisonTrainingInterests}}
    </table>
{{/induction}}
<br>
{{#goals}}
    <h2>Goal</h2>
    <table class="summary-list">
        <tr><td>Title</td><td>{{ optionalValue title }}</td></tr>
        <tr><td>Target completion date</td><td>{{ optionalValue (formatDate targetCompletionDate) }}</td></tr>
        <tr><td>Status</td><td>{{ optionalValue status }}</td></tr>
    </table>
    <table class="data-table">
        <tr>
            <td class="data-column-100">Notes</td>
        </tr>
        <tr>
            <td>{{ optionalValue notes }}</td>
        </tr>
    </table>

    <table class="data-table">
        <tr>
            <td class="data-column-15">Step</td>
            <td class="data-column-25">Status</td>
            <td class="data-column-60">Title</td>
        </tr>
        {{#steps}}
            <tr>
                <td>{{ optionalValue sequenceNumber }}</td>
                <td>{{ optionalValue status }}</td>
                <td>{{ optionalValue title }}</td>
            </tr>
        {{/steps}}
    </table>

{{/goals}}